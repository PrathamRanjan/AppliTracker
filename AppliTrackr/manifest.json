{
    "manifest_version": 3,
    "name": "Internship Application Tracker",
    "version": "1.0",
    "description": "Track your internship applications easily.",
    "permissions": [
      "identity",
      "activeTab",
      "storage",
      "tabs",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "externally_connectable": {
      "matches": ["*://*.linkedin.com/*"]
    },
    "oauth2": {
      "client_id": "508389607126-h1iem6s3a5c81jptmgl9qbpm00v9k5n1.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/spreadsheets"
      ]
    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  